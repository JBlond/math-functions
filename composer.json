{
  "name": "jblond/math-functions",
  "type": "library",
  "description": "description",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Mario",
      "email": "leet31337@web.de"
    }
  ],
  "require": {
    "php": ">= 8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9 || ^10 || ^11",
    "squizlabs/php_codesniffer": "*"
  },
  "suggest": {
        "ext-gd": "*"
  },
  "autoload": {
    "psr-4": {
      "jblond\\math\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "jblond\\math\\": "tests/jblond/math/"
    }
  },
  "config": {
    "classmap-authoritative": true
  },
  "scripts": {
    "coverage": [
      "@putenv XDEBUG_MODE=coverage",
      "phpunit --coverage-html doc"
    ],
    "phpunit": "phpunit ./tests/",
    "test": "phpunit --colors=always --testdox",
    "formatting": [
      "phpcs --standard=phpcs.xml -s -p --colors ./src/",
      "phpcs --standard=phpcs.xml -s -p --colors ./tests/"
    ]
  },
  "scripts-descriptions": {
    "phpunit": "Run PHPUnit tests",
    "test": "Run code formatting test and phpunit",
    "coverage": "Run phpunit code overage",
    "formatting": "Check Syntax style"
  }
}
